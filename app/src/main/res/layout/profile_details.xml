<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/view_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_name"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/view_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_email"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/view_user_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_phone"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/view_user_roll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_user_div"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        />

</RelativeLayout>